<div class="row">
  <div class="col-xs-12">
    <h2>Tags</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <th>Name</th>
      </thead>
      <tbody>
        {{#each tag in content}}
          {{#link-to 'tag' tag tagName='tr'}}
          <tr>
            <td>{{tag.name}}</td>
          </tr>
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>

    {{#if haveMultiplePages}}
      {{page-numbers content=content}}
    {{/if}}
  </div>
</div>

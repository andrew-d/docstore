<h2>Tags</h2>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each tag in model}}
          {{#link-to 'tag' tag.id tagName="tr"}}
            <td>
              {{tag.name}}
            </td>
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

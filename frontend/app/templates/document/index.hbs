<div class="row">
  <div class="col-xs-12">
    <h2>Document '{{ model.name }}'</h2>
  </div>
</div>

<div class="row">
  <div class="col-xs-8">
    <h3>Contents</h3>
    TKTK
  </div>

  <div class="col-xs-4">
    <h3>Metadata</h3>
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Value</th>
      </thead>
      <tbody>
        <tr>
          <td>Created</td>
          <td>{{moment-calendar model.created}}</td>
        </tr>
        <tr>
          <td>Total Size</td>
          <td>
            <span {{bind-attr title=fileSizeStr}}>
              {{human-file-size fileSize}}
            </span>
            in {{model.files.length}} file(s)
          </td>
        </tr>
      </tbody>
    </table>

    <h3>Tags</h3>
    <table class="table table-condensed">
      <tbody>
        {{#each tag in model.tags}}
          <tr>
            <td>{{ tag.name }}</td>
            <td>
              <button class="btn btn-danger btn-xs" {{action 'deleteTag' tag}}>
                <span class="glyphicon glyphicon-trash"></span>
              </button>
            </td>
          </tr>
        {{else}}
          <tr><td><i>(untagged)</i></td></tr>
        {{/each}}
      </tbody>
    </table>

    <h3>Actions</h3>

    <div role="tabpanel">
      <ul id="actionsTabs" class="nav nav-tabs" role="tablist" style="margin-bottom: 15px">
        <li role="presentation" class="active">
          <a href="#tags-pane" role="tab" data-toggle="tab">Tag</a>
        </li>
      </ul>

      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tags-pane">
          Add tags here
        </div>
      </div>
    </div>
</div>
